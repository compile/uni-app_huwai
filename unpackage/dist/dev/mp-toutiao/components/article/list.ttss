/*文章列表*/
.list {
  margin-top: 2rpx;
}
.list .item {
  padding: 40rpx 24rpx 0 24rpx;
}
.list .item .info {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-bottom: 4rpx;
}
.list .item .info .text {
  flex-grow: 1;
  flex-shrink: 1;
  display: flex;
  flex-direction: column;
  margin-right: 40rpx;
}
.list .item .info .text .title {
  flex-grow: 1;
  flex-shrink: 1;
  font-size: 34rpx;
  line-height: 1.5;
  display: -webkit-box;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  height: 72rpx;
  margin-bottom: 8rpx;
}
.list .item .info .text .other {
  flex-grow: 1;
  flex-shrink: 1;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #999;
  line-height: normal;
}
.list .item .info .text .other .left {
  display: flex;
  flex-grow: 1;
  flex-shrink: 1;
}
.list .item .info .text .other .left .source {
  display: -webkit-box;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  width: 140rpx;
  margin-right: 16rpx;
}
.list .item .info .text .other .right {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  flex-grow: 0;
  flex-shrink: 0;
  margin-right: 5rpx;
}
.list .item .info .text .other .right image {
  flex-grow: 1;
  flex-shrink: 1;
  width: 28rpx;
  height: 28rpx;
  margin-right: 12rpx;
}
.list .item .info .text .other .right text {
  flex-grow: 1;
  flex-shrink: 1;
  margin-top: -6rpx;
}
.list .item .info .text .other .view image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 5rpx;
}
.list .item .info .photo image {
  height: 170rpx;
  width: 222rpx;
  border-radius: 10rpx;
}
.list .item .line {
  display: bock;
  width: 100%;
  height: 1rpx;
  margin-top: 22rpx;
  background: #e8e8e8;
}

